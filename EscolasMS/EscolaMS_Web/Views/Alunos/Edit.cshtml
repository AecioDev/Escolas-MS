@model AlunoViewModel

@{
    ViewData["Title"] = "Editar Aluno";
}

<main role="main">
    <div class="container  col-sm-6" style="margin-top: 20px;">
        <form asp-controller="Alunos" asp-action="Edit" method="post">
            <main role="main">
                <section class="container" style="margin-top: 10px">
                    <div class="row">
                        <aside>
                            <h1 class="subtitle-doc">Editar Aluno </h1>
                            <div>
                                <div class="card">
                                    <article class="card-body">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-row">
                                            <div class="col form-group col-2">
                                                <label asp-for="AlunoId"></label>
                                                <input asp-for="AlunoId" type="text" class="form-control" placeholder="Código" readonly>
                                                <span asp-validation-for="AlunoId" class="text-danger"></span>
                                            </div>
                                            <div class="col form-group col-10">
                                                <label asp-for="Nome"></label>
                                                <input asp-for="Nome" type="text" class="form-control" placeholder="Nome Completo">
                                                <span asp-validation-for="Nome" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="col form-group">
                                                <label asp-for="DataNascimento" class="control-label"></label>
                                                <input asp-for="DataNascimento" class="form-control" type="date" placeholder="dd/MM/aaaa">
                                                <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                            </div>
                                            <div class="col form-group">
                                                <label asp-for="CPF" class="control-label"></label>
                                                <input asp-for="CPF" class="form-control" placeholder="">
                                                <span asp-validation-for="CPF" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="col form-group">
                                                <label asp-for="NumeroCertidaoNova" class="control-label"></label>
                                                <input asp-for="NumeroCertidaoNova" class="form-control" placeholder="">
                                                <span asp-validation-for="NumeroCertidaoNova" class="text-danger"></span>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label asp-for="ResponsavelId" class="control-label">
                                                    Responsável
                                                    <a asp-controller="Responsavel" asp-action="Index" data-html="code_register_1" class="showcode">[Cadastrar]</a>
                                                </label>
                                                <select asp-for="ResponsavelId" class="form-control"
                                                        asp-items="@ViewBag.Responsaveis">
                                                    <option disabled selected>--- NENHUM ---</option>
                                                </select>
                                                <span asp-validation-for="ResponsavelId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary btn-block">Salvar</button>
                                        </div>
                                    </article>
                                </div>
                            </div>
                        </aside>
                    </div>
                </section>
            </main>
            <div class="col-sm-11">
                <a class="float-right btn btn-outline-dark mt-1" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}